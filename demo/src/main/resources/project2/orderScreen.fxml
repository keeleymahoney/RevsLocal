<VBox alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project2.OrderScreenController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="103.0" prefWidth="227.0" text="Order Screen">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label prefHeight="66.0" prefWidth="480.0" />
            <Button fx:id="reload" mnemonicParsing="false" onAction="#createButtons" prefHeight="41.0" prefWidth="201.0" style="-fx-background-color: white; -fx-border-color: black;" text="Reload">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="171.0" text="Server">
               <font>
                  <Font size="28.0" />
               </font>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="692.0" prefWidth="1025.0" spacing="10">
         <children>
            <VBox alignment="center" prefHeight="621.0" prefWidth="246.0" spacing="80">
               <children>
                  <Button fx:id="entrees" mnemonicParsing="false" onAction="#clickEntrees" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Entrees">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                  <Button fx:id="sides" mnemonicParsing="false" onAction="#clickSides" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Sides">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                  <Button fx:id="beverages" mnemonicParsing="false" onAction="#clickBeverages" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Beverages">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                  <Button fx:id="desserts" mnemonicParsing="false" onAction="#clickDesserts" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Dessert">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                  <Button fx:id="seasonal" mnemonicParsing="false" onAction="#clickSeasonal" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Seasonal">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <ScrollPane prefHeight="621.0" prefWidth="732.0">
               <content>
                  <StackPane fx:id="menuItemsArea" prefHeight="631.0" prefWidth="715.0" />
               </content>
            </ScrollPane>

         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="clicked" alignment="CENTER" prefHeight="29.0" prefWidth="794.0" textAlignment="CENTER" />
            <Button fx:id="primaryButton" onAction="#switchToSecondary" prefHeight="70.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;" text="Next" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
